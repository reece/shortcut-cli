    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Debug CLI",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "justMyCode": true,
            "module": "shortcut_cli.cli",
            "args": [
                "-C", "config.yaml",
                "-w", "myome",
                "archive-epics", 
                "-c", "This epic is stale and has been archived. If you believe the epic is still relevant, reopen it.",
                "1248"
            ]
        }

    ]
}